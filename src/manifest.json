{
  "manifest_version": 2,

  "name": "My Anime List Chrome Extension",
  "version": "1.0",
  "description": "Chrome extension to make my anime list simpilier to use",
  "browser_action": {
    "default_title": "MAL"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["myanimelist.js", "messageListener.js"]
    }
  ],
  "permissions": [
    "tabs",
    "webRequest",
    "https://*.myanimelist.com/"
  ]
}
